{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2020",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./build",
    "declaration": true
  },
  "include": ["index.ts"]
}
